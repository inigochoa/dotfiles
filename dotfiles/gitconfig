[alias]
  # Abbreviations
  br = branch
  co = checkout
  cp = cherry-pick
  mt = mergetool

  # Alias commands
  la = "!git config -l | grep alias | cut -c 7-"
  list-alias = "!git la"

  # Branches
  cof = "!cb() { git checkout $1 -- $2; }; cb"
  mb = checkout -B

  # Commits in increasing detail
  l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lll = log -u

  # Commits per author
  who = shortlog -n -s --no-merges

  # Commiting
  c = commit
  ca = commit --amend --no-edit
  cm = "!cim() { git commit -m \"$1\"; }; cim"

  # Diffs
  diffc = diff --cached HEAD^
  diffw = diff --color --word-diff

  # Gerrit
  draft = "!draft() { git push origin HEAD:refs/drafts/$1; }; draft"
  review = "!review() { git push origin HEAD:refs/for/$1; }; review"

  # Onefetch
  onefetch = !git summary
  sm = !git summary
  stats = !git summary
  summary = "!which onefetch && onefetch"

  # Permissions
  addx = update-index --chmod=+x

  # Rebase
  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = "!ri() { git rebase -i HEAD~$1; }; ri"

  # Reset
  re = reset
  re1 = reset HEAD^
  rec = !git reh && git clean -fd
  reh = reset --hard

  # Search
  f = "!git ls-files | grep --color -i"
  grep = grep -Ii

  # Staging
  aa = !git sa
  rmall = "!git status -s | grep '^ D' | awk -F' ' '{ print $2 }' | xargs git rm"
  s = "!stage() { git add `git st | sed -n $1p | awk -F' ' '{ print $3 }'`; git st; }; stage"
  sa = !git add -u && git add . && git st
  st = "!git status -s | cat -n"
  u = "!unstage() { git reset HEAD `git st | sed -n $1p | awk -F' ' '{ print $3 }'`; git st; }; unstage"

[color]
  ui = true

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[core]
  editor = vim
  pager = delta
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[delta]
  dark = true
  features = decorations
  line-numbers = true
  navigate = true
  side-by-side = true
  syntax-theme = Dracula

[delta "decorations"]
	minus-style = red bold normal
	plus-style = green bold normal
	minus-emph-style = white bold red
	minus-non-emph-style = red bold normal
	plus-emph-style = white bold green
	plus-non-emph-style = green bold normal
	file-style = yellow bold none
	file-decoration-style = yellow box
	hunk-header-style = magenta bold
	hunk-header-decoration-style = magenta box
	minus-empty-line-marker-style = normal normal
	plus-empty-line-marker-style = normal normal
	line-numbers-right-format = "{np:^4}â”‚ "

[diff]
  colorMoved = default

[include]
  path = ~/.gitconfig-local

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = diff3
